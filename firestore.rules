
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Core functions for permission checks
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isRuud() {
      return request.auth.email == 'ruud@kontena.eu';
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (request.auth.token.role == 'admin' || isRuud());
    }
    
    function canEdit() {
      return isAuthenticated() && 
        (request.auth.token.role == 'editor' || 
         request.auth.token.role == 'admin' ||
         isRuud());
    }

    function isOwner(data) {
      return isAuthenticated() && data.userId == request.auth.uid;
    }

    // Wildcard rule for future collections - Ruud has full access to everything
    match /{document=**} {
      allow read, write: if isRuud();
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isRuud() || isAdmin();
    }

    // Modules collection
    match /modules/{moduleId} {
      allow read: if isAuthenticated();
      allow create, delete: if isRuud() || isAdmin();
      allow update: if isRuud() || canEdit();
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isRuud() || isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (isOwner(resource.data) || isAdmin() || isRuud());
      
      // Layouts subcollection
      match /layouts/{layoutId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && 
          (isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data) || 
           isAdmin() || 
           isRuud());
      }
    }

    // Grid preferences collection
    match /gridPreferences/{userId} {
      allow read: if isAuthenticated() && 
        (request.auth.uid == userId || isAdmin() || isRuud());
      allow write: if isAuthenticated() && 
        (request.auth.uid == userId || isAdmin() || isRuud());
    }

    // Settings collection
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isRuud() || isAdmin();
    }

    // Future collections wildcard rule
    match /{collection}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isRuud() || isAdmin();
    }
  }
}
